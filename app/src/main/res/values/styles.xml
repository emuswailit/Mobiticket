<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="background">@color/green_50</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">#000000</item>
        <item name="editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:imageButtonStyle">@style/App_ImageButtonStyle</item>
        <item name="android:textViewStyle">@style/App_TextViewMedium</item>
        <item name="android:buttonStyle">@style/App_ButtonStyle</item>

    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>


    <style name="App_ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/btn_rect_green</item>
        <item name="android:scaleType">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/googlesansextrabold</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:layout_marginEnd">@dimen/spacing_small</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="App_ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_shape</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/googlesansextrabold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
    </style>

    <style name="App_EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_rounded_border_edittext</item>
        <item name="android:textColor">@color/textheader</item>
        <item name="fontFamily">@font/googlesansregular</item>

        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
    </style>

    <!--    Medium sized text view-->
    <style name="App_TextViewMedium" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">@color/textheader</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/googlesansbold</item>

    </style>
    <!--style for ripple library-->
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    /* Toolbar theme */

    <style name="Toolbar">
        <item name="android:fontFamily">@font/googlesansextrabold</item>
    </style>
    /* Rating bar theme */

    /* Rating bar theme */

    <style name="RatingBar" parent="Theme.MaterialComponents">
        <item name="colorControlNormal">@color/rating</item>
        <item name="colorControlActivated">@color/rating</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

    <style name="RippleStyleDark" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#80000000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
