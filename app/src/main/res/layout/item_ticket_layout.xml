<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_3">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:background="@color/white"
        android:elevation="@dimen/spacing_small"
        app:cardCornerRadius="@dimen/spacing_small"
        app:cardElevation="@dimen/card_shadow">

        <LinearLayout

            android:id="@+id/lyt_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView

                        android:id="@+id/ivQRCode"
                        android:layout_width="150dp"
                        android:layout_height="150dp" />

                    <TextView
                        android:id="@+id/tvReferenceNumber"
                        style="@style/App_TextViewLarge"
                        android:layout_margin="@dimen/spacing_medium"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/textchild" />

                    <TextView
                        android:id="@+id/tvJourney"
                        style="@style/App_TextViewLarge"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="From FromStop to ToStop"
                        android:textColor="@color/grey_60" />

                    <TextView
                        android:id="@+id/tvAmount"
                        style="@style/App_TextViewLarge"
                        android:layout_margin="@dimen/spacing_medium"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0.00"
                        android:textSize="18sp"
                        android:textColor="@color/textheader" />

                    <TextView
                        android:gravity="center"
                        android:id="@+id/tvPaymentStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/googlesansregular"
                        android:text="Confirmed"
                        android:textSize="18sp"
                        android:textColor="@color/grey_60" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_marginEnd="@dimen/spacing_small"
                android:background="@color/grey_20" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:orientation="vertical">

                <TextView
android:gravity="center"
                    style="@style/App_TextViewMedium"
                    android:text="Travel Date and Time: "
                     />

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/spacing_medium"

                    android:orientation="horizontal">


                    <TextView
                        style="@style/App_TextViewSmall"
                        android:gravity="center"
                        android:id="@+id/tvTravelDate"
                        android:layout_width="0dp"

                        android:layout_weight="1"

                        android:text="Thus, 10 Mar 2018"
                       />

                    <TextView
                        android:gravity="center"
                        android:id="@+id/tvTravelTime"
                        android:layout_width="0dp"
                   style="@style/App_TextViewSmall"
                        android:layout_weight="1"

                        android:text="10.30pm"
                         />
                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_marginEnd="@dimen/spacing_small"
                android:background="@color/grey_20" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/spacing_medium"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                style="@style/App_TextViewMedium"
                    android:layout_marginTop="@dimen/spacing_medium"
                android:gravity="center"
                    android:text="Seat details"
                  />


                <TextView
                    android:gravity="center"
                    android:id="@+id/tvSeat"
                   style="@style/App_TextViewSmall"
                    android:layout_weight="1"

                    android:text="Free Seating"

                    android:textColor="@color/grey_60" />

            </LinearLayout>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>